// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int     @id @default(autoincrement())
  email                 String  @unique
  password              String
  name                  String?
  points                Int     @default(0)
  emailVerifiedAt       DateTime?
  verificationToken     String?
  verificationExpiresAt DateTime?
  signupBonusGranted    Boolean @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  downloads Download[]
  payments  Payment[]
  previews  Preview[]

  @@map("users")
}

model Category {
  id          Int    @id @default(autoincrement())
  name        String @unique
  pointsCost  Int    @default(10)
  description String?

  resources Resource[]

  @@map("categories")
}

model Resource {
  id          Int     @id @default(autoincrement())
  title       String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  description String?
  mainLink    String
  password    String?
  backupLink1 String?
  backupLink2 String?
  source      String? // 'baidu', 'quark', etc
  pointsCost  Int     @default(10)
  downloads   Int     @default(0)
  isNew       Boolean @default(true)

  // 预览功能相关字段
  fileType    String? // 'pdf', 'doc', 'xls', 'ppt', 'image', 'video', 'other'
  fileSize    String? // 文件大小（可选）
  previewable Boolean @default(true) // 是否支持预览

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  downloadRecords Download[]
  previewRecords  Preview[]

  @@map("resources")
}

model Download {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  resource   Resource @relation(fields: [resourceId], references: [id])
  resourceId Int
  pointsSpent Int
  downloadedAt DateTime @default(now())

  @@unique([userId, resourceId])
  @@map("downloads")
}

model Payment {
  id            Int     @id @default(autoincrement())
  user          User    @relation(fields: [userId], references: [id])
  userId        Int
  amount        Float
  pointsAdded   Int
  paymentMethod String // 'wechat', 'alipay'
  status        String @default("pending") // 'pending', 'success', 'failed'
  transactionId String? @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("payments")
}

model ImportLog {
  id           Int     @id @default(autoincrement())
  totalCount   Int
  successCount Int
  failedCount  Int
  importData   Json?
  createdAt    DateTime @default(now())

  @@map("import_logs")
}

model Preview {
  id          Int      @id @default(autoincrement())
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?     // 可为空，支持未登录用户预览
  resource    Resource @relation(fields: [resourceId], references: [id])
  resourceId  Int
  previewedAt DateTime @default(now())

  @@index([resourceId])
  @@index([userId])
  @@map("previews")
}
